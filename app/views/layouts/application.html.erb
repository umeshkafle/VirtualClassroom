<!DOCTYPE html>
<html>
  <head>
    <title>VirtualClassroom</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-inverse navbar-top navbar-fixed-top">
      <div class="container-fluid">
        <div class="container">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
             <span class="sr-only">Toggle navigation</span>
             <span class="icon-bar"></span>
             <span class="icon-bar"></span>
             <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">IslingtonClassroom</a>
          </div>
          <% if user_signed_in?%>
          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_user.email%> <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li role="separator" class="divider"></li>
                <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
              </ul>
            </li>
          </ul>

          
            <ul class="nav navbar-nav navbar-right">
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false", class: "btn btn-info">Add subjects  <span class="glyphicon glyphicon-plus"></span></a>
                <ul class="dropdown-menu">
                  <% @subjects.each do |subject|%>
                    <li role="separator" class="divider"></li>
                    <li><%= link_to"#{subject.title}"%></li>
                  <%end%>
                </ul> 
              </li>
            </ul>
          <%end%>
        </div>
      </div>
      
    </nav>
    <div class="main-container">
      <%= yield %>
    </div>
  </body>
</html>