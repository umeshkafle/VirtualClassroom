
<h1>Courses</h1>
<div class="well">
  <%= link_to "New course", new_course_path, class: "btn btn-primary" %>

	<% if flash[:notice] %>
	  <div class="alert alert-success"><%= flash[:notice] %></div>
	<% end %>

	<table class="table table-bordered table-striped">
	  <thead>
	    <tr>
	      <th>course Title</th>
	    </tr>
	  </thead>
	  <tbody>
	    <% @courses.each do |course| %>
	      <tr>
	        <td><%= course.title %></td>
	        <td>
	          <%= link_to "Edit", edit_course_path(course), class: "btn btn-default" %>
	        </td>
	        <td>
	          <%= link_to "Delete", course, method: :delete, data: { confirm: "Are you sure you wish to delete #{course.title}"}, class: "btn btn-danger" %>
	        </td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>
</div>